{% if system_type == 'laptop'   %}
{%     set font_dpi     = '148' %}
{%     set xcursor_size = '32'  %}
{% else                         %}
{%     set font_dpi     = '120' %}
{%     set xcursor_size = '32'  %}
{% endif                        %}

xcursor.size: {{ xcursor_size }}
Xft.dpi: {{ font_dpi }}

urxvt*scrollBar:false
urxvt.perl-ext-common:  default,-searchable-scrollback
urxvt*geometry: 90x24
urxvt*termName: rxvt-256color

*.cursorColor: #eee
*.foreground:  #eee
*.background:  #000

*.color1: OrangeRed
*.color4: CornflowerBlue
*.color12: #729FCF

*.font: xft:xos4 Terminus:style=regular:size=11:antialias=false:lang=pl,xft:Droid Sans Japanese,xft:Droid Sans Fallback
